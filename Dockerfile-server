FROM python:3.10-slim

# Cài đặt các phụ thuộc hệ thống
RUN apt-get update && \
    apt-get install -y --no-install-recommends libopus0 ffmpeg locales && \
    sed -i '/zh_CN.UTF-8/s/^# //g' /etc/locale.gen && \
    locale-gen && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Cấu hình pip sử dụng mirror nội địa (Aliyun) và thiết lập timeout và retry
RUN pip config set global.index-url https://mirrors.aliyun.com/pypi/simple/ && \
    pip config set global.trusted-host mirrors.aliyun.com && \
    pip config set global.timeout 120 && \
    pip config set install.retries 5

# Thiết lập biến môi trường để đảm bảo mã hóa ký tự đúng
ENV LANG=zh_CN.UTF-8 \
    LC_ALL=zh_CN.UTF-8 \
    LANGUAGE=zh_CN:zh \
    PYTHONIOENCODING=utf-8

WORKDIR /opt/xiaozhi-esp32-server

# Sao chép requirements.txt và cài đặt các phụ thuộc Python (tách riêng để tận dụng Docker cache)
COPY main/xiaozhi-server/requirements.txt .
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt --default-timeout=120 --retries 5

# Sao chép mã ứng dụng
COPY main/xiaozhi-server .

# Khởi động ứng dụng
CMD ["python", "app.py"]